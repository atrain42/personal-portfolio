<section class="section" id="contact" data-id="section-id">
    <div class="bind__content">
        <h1 class="bouncing-header">
            Contact Me
        </h1>
        <p class="contact-text"> 
            Feel free to reach out to me about anything - I am always open to freelance work and 
            enjoy hearing new innovative ideas.
        </p>
        <div class="contact__content">
            <form class="form" action="https://formsubmit.co/maxheimer4211@gmail.com" method="POST">
                <span class="input__container">
                    <input type="text" name="first name" id="" placeholder="First name">
                    <input type="text" name="last name" id="" placeholder="Last name">
                </span>

                <span class="input__container">
                    <input type="email" name="email" id="" placeholder="Email">
                    <input type="text" name="subject" id="" placeholder="Subject">
                </span>

                <textarea name="" cols="5" rows="15" id="text-input" placeholder="Message"></textarea>
                <div class="button__container">
                    <button>Submit</button>
                </div>
            </form>
        </div>
    </div>
    <img src="./img/arizona.jpg" id="contact-photo" alt="image of me!">

</section>


